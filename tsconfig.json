{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"] // Указываем только нужные папки для типов
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
